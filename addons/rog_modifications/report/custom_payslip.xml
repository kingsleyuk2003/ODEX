<template id="report_payslip_custom_rog">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
           <t t-call="kin_hr.hr_custom_layout"  >
                <div class="page">
                    <style type="text/css">
							<t t-call="kin_report.style"/>
						</style>
                    <!--<div t-raw="o.contract_id.operating_unit_id.html_after_header" />-->
                    <p  align="center"  ><b> <span style="font-size:18px" t-field="o.name"/></b></p>
                    <table  style="width: 100%;" class="mt8 table-bordered-black table.withboarder" cellpadding="3" cellspacing="0" >
                        <tr>
                            <td><span><strong>Staff ID:</strong></span></td>
                            <td><span t-field="o.employee_id.identification_id"/></td>
                            <td><span><strong>Job Title:</strong></span></td>
                            <td><span t-field="o.employee_id.job_id"/></td>
                        </tr>
                        <tr>
                             <td><span><strong>Grade:</strong></span></td>
                            <td><span t-field="o.employee_id.grade_id"/></td>
                             <td><span><strong>Bank:</strong></span></td>
                            <td><span t-field="o.employee_id.bank_id.name"/></td>
                        </tr>

                        <tr>
                             <td><span><strong>PFA:</strong></span></td>
                            <td><span t-field="o.employee_id.pfa_id"/></td>
                            <td><span><strong>Bank Acct. No.:</strong></span></td>
                            <td><span t-field="o.employee_id.bank_account_id"/></td>
                        </tr>
                        <tr>
                            <td><span><strong>PFA Pin:</strong></span></td>
                            <td><span t-field="o.employee_id.rsa"/></td>
                             <td><span><strong>P.A.Y.E. ID:</strong></span></td>
                            <td><span t-field="o.employee_id.paye"/></td>
                        </tr>

                    </table>

                         <p />
						<div class="row mt16">
							<div class="col-xs-12 text-center" >
								<span style="font-weight:bold" >.................................. MONTHLY SALARY INFORMATION ....................................</span>
							</div>
						</div>
						<p />
                    <table  style="width: 100%;" class="mt8 table-bordered-black" cellpadding="3" cellspacing="0" >
                        <tbody>
                            <table style="width: 100%;">
                                <tr>
                                    <td>
                                        <table style="width: 100%;">
                                             <t t-set="emolument_total" t-value="0" />
                                            <t t-set="emolument_sn" t-value="0" />
                                            <t t-set="lines" t-value="get_payment_slip_lines(o.line_ids)"/>
                                            <tr><td colspan="2"><b>A.     EMOLUMENT DETAILS</b></td></tr>
                                            <tr t-foreach="lines" t-as="p">
                                                <t t-if="p.appears_on_payslip and p.category_id.code == 'emolument'" >
                                                        <t t-set="emolument_total" t-value="emolument_total + p.total" />
                                                        <t t-set="emolument_sn" t-value="emolument_sn + 1" />
                                                </t>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'emolument'"  ><span t-esc="emolument_sn" /><span>.)</span>     <span t-field="p.name"/></td>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'emolument'" ><span t-esc="'{:,.2f}'.format(p.total)" /></td>
                                            </tr>
                                            <tr><td colspan="2"><b>Sub-Total</b></td> <td><b><span t-esc="'{:,.2f}'.format(emolument_total)" /></b> </td></tr>
                                            <tr><td>  <br/></td></tr>
                                             <t t-set="refund_total" t-value="0" />
                                             <t t-set="refund_sn" t-value="0" />
                                            <tr><td colspan="2"><b>B. REFUNDS</b></td></tr>
                                            <tr t-foreach="lines" t-as="p">
                                                 <t t-if="p.appears_on_payslip and p.category_id.code == 'refund'" >
                                                        <t t-set="refund_total" t-value="refund_total + p.total" />
                                                        <t t-set="refund_sn" t-value="refund_sn + 1" />
                                                </t>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'refund'"  ><span t-esc="refund_sn" /> <span t-field="p.name"/></td>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'refund'" ><span t-esc="'{:,.2f}'.format(p.total)" /></td>
                                            </tr>
                                            <tr><td colspan="2"><b>Sub-Total</b></td> <td><b><span t-esc="'{:,.2f}'.format(refund_total)" /></b> </td></tr>
                                             <tr><td>  <br/></td></tr>
                                             <tr><td colspan="2"><b>C. TAXABLE INCOME</b></td> <td><b><span t-esc="'{:,.2f}'.format(emolument_total + refund_total)" /></b> </td></tr>
                                            <tr><td>  <br/></td></tr>
                                            <t t-set="other_reimbursement" t-value="0" />
                                            <t t-set="other_reimbursement_sn" t-value="0" />
                                            <tr><td colspan="2"><b>D. OTHER REIMBURSEMENTS</b></td></tr>
                                            <tr t-foreach="lines" t-as="p">
                                                <t t-if="p.appears_on_payslip and p.category_id.code == 'other_reimbursement'" >
                                                        <t t-set="other_reimbursement" t-value="other_reimbursement + p.total" />
                                                        <t t-set="other_reimbursement_sn" t-value="other_reimbursement_sn + 1" />
                                                </t>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'other_reimbursement'"  ><span t-esc="other_reimbursement_sn" /><span>.)</span> <span t-field="p.name"/></td>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'other_reimbursement'" ><span t-esc="'{:,.2f}'.format(p.total)" /></td>
                                            </tr>
                                            <tr><td colspan="2"><b>Sub-Total</b></td> <td><b><span t-esc="'{:,.2f}'.format(other_reimbursement)" /></b> </td></tr>
                                           <tr><td> <br/></td></tr>
                                            <tr> <td colspan="2"> <b> E. GROSS TOTAL</b></td> <td><b><span t-esc="'{:,.2f}'.format(emolument_total + refund_total + other_reimbursement)" /></b> </td></tr>
                                        </table>
                                    </td>

                                    <td>
                                        <table style="width: 100%;" >
                                            <tr><td colspan="2"><b>DEDUCTIONS</b></td></tr>
                                            <tr><td> <br/></td></tr>
                                            <t t-set="statutory" t-value="0" />
                                            <t t-set="statutory_sn" t-value="0" />
                                            <tr><td colspan="2"><b>F. STATUTORY</b></td></tr>
                                            <tr t-foreach="lines" t-as="p">
                                                <t t-if="p.appears_on_payslip and p.category_id.code == 'statutory'" >
                                                        <t t-set="statutory" t-value="statutory + p.total" />
                                                        <t t-set="statutory_sn" t-value="statutory_sn + 1" />
                                                </t>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'statutory'"  ><span t-esc="statutory_sn" /><span>.)</span> <span t-field="p.name"/></td>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'statutory'" ><span t-esc="'{:,.2f}'.format(p.total)" /></td>
                                            </tr>
                                             <tr><td colspan="2"><b>Sub-Total</b></td> <td><b><span t-esc="'{:,.2f}'.format(statutory)" /></b> </td></tr>
                                              <tr><td> <br/></td></tr>
                                            <tr> <td colspan="2"> <b>G. INITIAL NETPAY</b></td> <td><b><span t-esc="'{:,.2f}'.format(emolument_total + refund_total + other_reimbursement - statutory)" /></b> </td></tr>
                                             <tr><td> <br/></td></tr>
                                            <t t-set="other_deduction" t-value="0" />
                                            <t t-set="other_deduction_sn" t-value="0" />
                                            <tr><td colspan="2"><b>H. OTHER DEDUCTIONS</b></td></tr>
                                            <tr t-foreach="lines" t-as="p">
                                                <t t-if="p.appears_on_payslip and p.category_id.code == 'other_deduction'" >
                                                        <t t-set="other_deduction" t-value="other_deduction + p.total" />
                                                        <t t-set="other_deduction_sn" t-value="other_deduction_sn + 1" />
                                                </t>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'other_deduction'"  ><span t-esc="other_deduction_sn" /><span>.)</span> <span t-field="p.name"/></td>
                                                <td t-if="p.appears_on_payslip and p.category_id.code == 'other_deduction'" ><span t-esc="'{:,.2f}'.format(p.total)" /></td>
                                            </tr>
<!--                                            <tr t-foreach="lines" t-as="p">-->
<!--                                               <t t-if="p.appears_on_payslip and p.salary_rule_id.is_leave_allowance" >-->
<!--                                                        <t t-set="other_deduction" t-value="other_deduction + p.total" />-->
<!--                                                        <t t-set="other_deduction_sn" t-value="other_deduction_sn + 1" />-->
<!--                                                </t>-->
<!--                                                <td t-if="p.appears_on_payslip and p.salary_rule_id.is_leave_allowance"  ><span t-esc="other_deduction_sn" /><span>.)</span> <span t-field="p.name"/></td>-->
<!--                                                <td t-if="p.appears_on_payslip and p.salary_rule_id.is_leave_allowance" ><span t-esc="'{:,.2f}'.format(p.total)" /></td>-->
<!--                                            </tr>-->
                                             <tr><td colspan="2"><b>Sub-Total</b></td> <td><b><span t-esc="'{:,.2f}'.format(other_deduction)" /></b> </td></tr>
                                              <tr><td> <br/></td></tr>
                                            <tr> <td colspan="2"> <b>I. TOTAL DEDUCTIONS</b></td> <td><b><span t-esc="'{:,.2f}'.format(statutory + other_deduction)" /></b> </td></tr>
                                             <tr><td> <br/></td></tr>
                                            <tr> <td colspan="2"> <b>J. FINAL NETPAY</b></td> <td><b><span t-esc="'{:,.2f}'.format(emolument_total + refund_total + other_reimbursement - statutory - other_deduction)" /></b> </td></tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>


